<?xml version="1.0" encoding="UTF-8"?>
<!-- Declares the XML version and encoding -->
<hibernate-configuration
    xmlns="http://www.hibernate.org/xsd/orm/cfg"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- Root element for Hibernate configuration with XML namespaces -->
    
    <session-factory>
        <!-- Main configuration block for Hibernate session factory -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- Specifies the JDBC driver class for MySQL -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/students</property>
        <!-- Sets the JDBC URL to connect to the 'students' database on localhost -->
        <property name="hibernate.connection.username">root</property>
        <!-- Database username -->
        <property name="hibernate.connection.password">root</property>
        <!-- Database password -->
        <property name="hibernate.hbm2ddl.auto">create</property>
        <!--
            Controls schema generation:
            - update: Updates the database schema to match entity mappings, does not drop existing data.
            - create: Drops and recreates the schema every time (data loss).
            - create-drop: Creates schema at startup, drops it at shutdown.
            - validate: Validates schema, but does not modify it.
            - none: No schema generation or validation.
            If the DB already exists and does not need to be created or updated, use 'validate' or 'none'.
        -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- Specifies the SQL dialect for MySQL -->
        <property name="hibernate.show_sql">true</property>
        <!-- Enables logging of SQL statements generated by Hibernate -->
        <property name="hibernate.format_sql">true</property>
        <!-- Formats the SQL output for better readability -->
    </session-factory>
    <!-- Ends the session factory configuration -->
</hibernate-configuration>
<!-- Ends the Hibernate configuration file -->
